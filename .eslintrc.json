{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "semi": [
      "off",
      "never"
    ],
    "indent": [
      2,
      "space"
    ],
    "no-tabs": 0,
    "quotes": [
      "off",
      "never"
    ]
  },
  "env": {
    "browser": 1
  }
}