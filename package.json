{
  "name": "hackupc-frontend",
  "version": "1.0.0",
  "description": "HackUPC static landing and live web pages",
  "main": "dist/index.html",
  "scripts": {
    "dist": "npm-run-all --parallel dist:*",
    "watch": "npm-run-all --parallel serve dist watch:*",
    "test": "npm run -s lint",
    "predist": "npm run clean",
    "postdist": "npm-run-all --parallel fingerprint && npm run --silent notify:build",
    "fingerprint": "asset-cache-bust 'dist/*.html'",
    "serve": "http-server dist",
    "notify:update": "notify -t 'HackUPC frontend' -m 'Dist updated' -open https://localhost:8080/",
    "notify:build": "notify -t 'HackUPC frontend' -m 'Dist builded' -open https://localhost:8080/",
    "clean": "rm -Rf dist/*",
    "postclean": "touch dist/.gitkeep",
    "predist:data": "mkdir -p dist/data",
    "predist:styles": "mkdir -p dist/assets/css",
    "predist:scripts": "mkdir -p dist/assets/js",
    "predist:images": "mkdir -p dist/assets/img",
    "predist:lib": "mkdir -p dist/lib",
    "dist:styles": "npm-run-all --parallel scss:* css:*",
    "dist:scripts": "npm-run-all --parallel js:* ts:*",
    "dist:images": "imagemin-newer src/images/ dist/assets/img",
    "dist:data": "cp -a src/data/. dist/data",
    "dist:html": "cp src/*.html dist",
    "dist:icon": "cp src/favicon.ico dist",
    "dist:legal": "cp -a src/legal/. dist",
    "dist:lib": "cp -a src/lib/. dist/lib",
    "scss:live": "node-sass --output-style compressed  src/styles/live.scss dist/assets/css/live.min.css",
    "css:cookies": "postcss -u postcss-preset-env autoprefixer cssnano -o dist/assets/css/cookies.min.css src/styles/cookies.css",
    "css:main": "postcss -u postcss-preset-env autoprefixer postcss-normalize cssnano -o dist/assets/css/main.min.css src/styles/main.css",
    "css:legal": "postcss -u postcss-preset-env autoprefixer cssnano -o dist/assets/css/legal.min.css src/styles/legal.css",
    "watch:js": "onchange \"src/scripts\" -- npm-run-all dist:scripts notify:update",
    "watch:cookies": "onchange \"src/styles/cookies.css\" -- npm-run-all css:cookies notify:update",
    "watch:live": "onchange \"src/styles/live.scss\" -- npm-run-all scss:live notify:update",
    "watch:main": "onchange \"src/styles/main.css\" -- npm-run-all css:main notify:update",
    "watch:data": "onchange \"src/data\" -- npm-run-all dist:data notify:update",
    "watch:images": "onchange \"src/images\" -- npm-run-all dist:images notify:update",
    "watch:html": "onchange \"src/*.html\" -- npm-run-all dist:html notify:update",
    "watch:icon": "onchange \"src/*.ico\" -- npm-run-all dist:icon notify:update",
    "watch:legal": "onchange \"src/legal\" -- npm-run-all dist:legal notify:update",
    "watch:lib": "onchange \"src/lib\" -- npm-run-all dist:lib notify:update",
    "ts:main": "tsc src/scripts/main.ts --outFile /dev/stdout | uglifyjs -m -c -o dist/assets/js/main.min.js ",
    "ts:cookies": "tsc src/scripts/cookies.ts --outFile /dev/stdout | uglifyjs -m -c -o dist/assets/js/cookies.min.js ",
    "js:live": "uglifyjs src/scripts/config.live.js src/scripts/util.live.js src/scripts/live.js -m -c -o dist/assets/js/live.min.js",
    "lint": "npm-run-all --silent --parallel -c lint:*",
    "lint:html": "htmlhint src/*.html",
    "lint:js": "eslint src/scripts/*.js"
  },
  "author": "HackUPC Dev Team",
  "license": "MIT",
  "dependencies": {
    "asset-cache-bust": "^2.2.0",
    "autoprefixer": "^6.7.3",
    "cssnano": "^4.1.10",
    "imagemin-newer": "^1.0.2",
    "node-notifier-cli": "^1.0.1",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^6.0.0",
    "postcss-cli": "^6.1.2",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.6.0",
    "typescript": "^2.0.3",
    "uglify-js": "^2.8.29"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "htmlhint": "^0.11.0",
    "http-server": "^0.11.1",
    "standard": "^8.6.0"
  }
}
