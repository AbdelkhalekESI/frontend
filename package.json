{
  "name": "hackupc2016",
  "version": "1.0.0",
  "description": "<3",
  "main": "index.js",
  "scripts": {
    "predist": "npm run clean",
    "dist": "npm-run-all -p scripts styles fonts",
    "fonts": "cp -R src/fonts dist/assets/",
    "styles": "npm-run-all -p scss:* && postcss -u autoprefixer -r dist/assets/css/*",
    "scss:main": "node-sass --output-style compressed src/styles/main.2017w.scss dist/assets/css/main.2017w.min.css",
    "scss:live": "node-sass --output-style compressed  src/styles/app.scss dist/assets/css/app.min.css",
    "scripts": "npm-run-all -p minjs:*",
    "minjs:main": "tsc src/scripts/snowflakes.ts --outFile CON | uglifyjs -m -c -o dist/assets/js/snowflakes.min.js ",
    "minjs:live": "uglifyjs src/scripts/*live.js -m -c -o dist/assets/js/app.min.js",
    "autoprefixer": "postcss -u autoprefixer -r dist/assets/css/*",
    "imagemin": "imagemin src/images dist/assets/images -p",
    "watch:js": "onchange \"src/scripts\" -- npm run scripts",
    "watch:css": "onchange \"src/styles\" -- npm run styles",
    "watch:fonts": "onchange \"src/fonts\" -- npm run fonts",
    "watch:images": "onchange \"src/images\" -- npm run imagemin",
    "auto": "npm-run-all -p watch:*",
    "clean": "rm -Rf dist/assets && mkdirp dist/assets/js dist/assets/fonts",
    "start": "http-server dist",
    "test": "standard src/scripts/*.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "http-server": "^0.9.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "standard": "^8.0.0",
    "typescript": "^2.0.3",
    "uglify-js": "^2.7.5"
  }
}
