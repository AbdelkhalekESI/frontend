{
  "name": "hackupc-frontend",
  "version": "1.0.0",
  "description": "HackUPC static landing and live web pages",
  "main": "dist/index.html",
  "scripts": {
    "dist": "npm-run-all -p dist:*",
    "watch": "npm-run-all --parallel serve dist watch:*",
    "test": "npm run -s lint",
    "predist": "npm run clean",
    "postdist": "npm-run-all -p fingerprint",
    "fingerprint": "asset-cache-bust dist/*.html",
    "serve": "http-server dist",
    "notify-update": "notify -t 'Hackupc' -m 'Dist updated' -s",
    "clean": "rm -Rf dist/* && touch .gitkeep",
    "predist:styles": "mkdir -p dist/assets/css",
    "predist:scripts": "mkdir -p dist/assets/js",
    "predist:images": "mkdir -p dist/assets/img",
    "dist:styles": "npm-run-all -p scss:* && postcss -u autoprefixer preset-env -r dist/assets/css/*",
    "dist:scripts": "npm-run-all -p minjs:*",
    "dist:images": "imagemin-newer src/images/ dist/assets/img",
    "dist:data": "cp -R src/data dist/data/",
    "dist:html": "cp src/*.html dist",
    "dist:icon": "cp src/*.ico dist",
    "dist:legal": "cp src/legal/* dist",
    "dist:lib": "cp src/lib/* dist/lib",
    "scss:live": "node-sass --output-style compressed  src/styles/app.scss dist/assets/css/app.min.css",
    "watch:js": "onchange \"src/scripts\" -- npm-run-all dist:scripts notify-update",
    "watch:css": "onchange \"src/styles\" -- npm-run-all dist:styles notify-update",
    "watch:data": "onchange \"src/data\" -- npm-run-all dist:data notify-update",
    "watch:images": "onchange \"src/images\" -- npm-run-all dist:images notify-update",
    "watch:html": "onchange \"src/*.html\" -- npm-run-all dist:html notify-update",
    "watch:icon": "onchange \"src/*.ico\" -- npm-run-all dist:icon notify-update",
    "watch:legal": "onchange \"src/legal\" -- npm-run-all dist:legal notify-update",
    "watch:lib": "onchange \"src/lib\" -- npm-run-all dist:lib notify-update",
    "minjs:main": "tsc src/scripts/main.ts --outFile /dev/stdout | uglifyjs -m -c -o dist/assets/js/main.min.js ",
    "minjs:live": "uglifyjs src/scripts/config.live.js src/scripts/util.live.js src/scripts/live.js -m -c -o dist/assets/js/app.min.js",
    "lint": "npm-run-all --silent --parallel -c lint:*",
    "lint:html": "htmllint dist/*.html",
    "lint:js": "eslint src/scripts/*.js"
  },
  "author": "HackUPC Dev Team",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.7.3",
    "asset-cache-bust": "^2.2.0",
    "imagemin-newer": "^1.0.2",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "postcss-preset-env": "^6.6.0",
    "typescript": "^2.0.3",
    "node-sass": "^4.5.0",
    "uglify-js": "^2.7.5"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "htmllint": "^0.6.0",
    "htmllint-cli": "0.0.6",
    "http-server": "^0.11.1",
    "node-notifier-cli": "^1.0.1",
    "standard": "^8.6.0"
  }
}
